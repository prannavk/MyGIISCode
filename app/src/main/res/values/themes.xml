<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GIISProtoT1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/giis_purple</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white_smoke</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_cyan_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyActualTheme" parent="Theme.GIISProtoT1">
        <item name="colorAccent">@color/giis_purple</item>
        <item name="colorControlActivated">@color/purple_200</item>
        <item name="tabTextAppearance">@style/MyTabAppearance</item>
        <item name="titleTextAppearance">@style/MyToolBarAppearance</item>
        <item name="android:editTextStyle">@style/MyAppCompatEditText</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialogTheme</item>
    </style>

    <style name="BasicTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.iphone_notch" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="MyTabAppearance" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/notosans_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
    </style>

    <style name="MyToolBarAppearance" parent="Widget.MaterialComponents.Toolbar">
        <item name="fontFamily">@font/notosans_semibold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyTextInputLayoutBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="MyAppCompatEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyCustomTIL" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="colorControlActivated">@android:color/transparent</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <!--        <item name="android:windowBackground">@drawable/bottomsheetbg_1</item>-->
        <item name="bottomSheetStyle">@drawable/bottomsheetbg_1</item>
        <!--        <item name="android:windowBlurBehindEnabled">true</item>-->
    </style>


</resources>