<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:outlineProvider="none"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/tb_homeasup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_7sdp"
        android:background="?attr/selectableItemBackground"
        android:backgroundTint="@color/white"
        android:src="@drawable/homeasup_arrow_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tb_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/notosans_semibold"
        android:includeFontPadding="false"
        android:textColor="@color/text_black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="@id/tb_homeasup_button"
        app:layout_constraintStart_toEndOf="@id/tb_homeasup_button"
        app:layout_constraintTop_toTopOf="@id/tb_homeasup_button"
        app:layout_constraintVertical_bias="0.4"
        tools:text="Activity" />

</androidx.constraintlayout.widget.ConstraintLayout>